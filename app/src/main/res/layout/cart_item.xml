<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:id="@+id/displayLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <!--android:adjustViewBounds="true"-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:src="@drawable/profile_avatar_small"
            android:id="@+id/cart_product_image"
            android:layout_marginTop="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            />


    <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:scaleType="center"
        android:textColor="#76FF03"
            android:text="Product Name"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:padding="10dp"
            android:textStyle="italic|bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orginal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:scaleType="center"
                android:text="Price : Rs"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/cart_product_orginal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
              android:layout_toEndOf="@id/orginal_price"
                android:textAlignment="center"

                android:textColor="#D84315"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:text="QTY :"
            android:layout_toEndOf="@id/cart_product_orginal_price"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:padding="10dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_toEndOf="@id/quantity"
            android:layout_marginTop="40dp"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:padding="10dp"
            android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:text="Total Price : Rs"
                android:textSize="15sp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/cart_product_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_toEndOf="@id/total_price"
                android:textColor="#EF6C00"
                android:layout_marginTop="60dp"

                android:textSize="15sp"
                android:padding="10dp"
                />




        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<ImageView
    android:id="@+id/remove_item_cart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_alignParentRight="true"
    android:src="@drawable/ic_delete_black_24dp"
      />



</RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>